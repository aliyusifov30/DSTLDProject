
@model ShopOnInstagram

<div class="modal-body">
    <div class="row">
        <div class="item col-lg-8 col-md-6 col-sm-12 col-12">
            <a style="cursor: pointer;" data-bs-dismiss="modal">
                <div class="image">
                    <img src="~/uploads/shop-on-instagram/@Model.Image" alt="">
                </div>
            </a>
        </div>
        <div class="item col-lg-4 col-md-6 col-sm-12 col-12">
            <div class="detail-title">
                <div class="detail-title-logo-side col-lg-6 col-md-6 col-sm-6 col-6">
                    <a href="@Model.Url" class="logo" target="_blank">
                        <div class="logo-image">
                            <img src="~/assets/img/instagram-logo.png" alt="">
                        </div>
                    </a>
                    <a href="@Model.Url" class="text" target="_blank">
                        <h2>dstld</h2>
                        <span>dstld</span>
                    </a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-end">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
            </div>
            <!-- <div class="detail-arrow">
                <div class="row">
                    <div class="back col-lg-6">
                        <a href="">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </div>
                    <div class="next col-lg-6">
                        <a href="">
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div> -->
            <div class="detail-desc">
                <div class="row">
                    <div class="text col-lg-12">
                        <p>@Model.Desc</p>
                    </div>
                </div>
            </div>
            <div class="detail-date">
                <div class="row">
                    <div class="text col-lg-12">
                        <p>@Model.CreateAt.ToString("MMMM dd") • <a href="@Model.Url" target="_blank">View on Instagram</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
