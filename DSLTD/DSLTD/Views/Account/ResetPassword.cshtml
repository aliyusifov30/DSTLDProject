
@model MemberResetPasswordViewModel

<main>

    <section id="reset-password">
        <div class="container">
            <div class="row">
                <div class="reset-password-title col-lg-12">
                    <h2>
                        Reset your Password.
                    </h2>
                    <p>Use the form below to set a new password.</p>
                </div>
                <div class="col-lg-12">
                    <form asp-action="changepassword" method="post">

                        <input type="hidden" asp-for="Email" value="@Model.Email" />
                        <input type="hidden" asp-for="Token" value="@Model.Token" />

                        <div class="mb-3">
                            <label asp-for="NewPassword">Your new Password:</label>
                            <input asp-for="NewPassword" aria-describedby="emailHelp">
                            <span class="text-danger" asp-validation-for="NewPassword" style="font-size:12px;"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword">Confirm Password:  </label>
                            <input asp-for="ConfirmPassword" aria-describedby="emailHelp">
                            <span class="text-danger" asp-validation-for="ConfirmPassword" style="font-size:12px;"></span>
                        </div> 
                        <button type="submit">Submit</button>
                    </form>
                </div>
                <div class="help col-lg-12">
                    <p>
                        If you did not request a password reset, please contact our customer service team by emailing hello@dstld.la.
                        Our customer service hours are Monday through Friday from 6am-6pm PST.
                    </p>
                </div>
            </div>
        </div>
    </section>

</main>


@section Scripts{
    <script src="~/assets/js/abstract/form-input.js"></script>
    @await Html.PartialAsync("_ValidationPartial") 
}
