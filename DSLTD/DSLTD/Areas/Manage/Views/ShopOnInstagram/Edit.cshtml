
@{
    ViewData["Title"] = "Edit";
}

@model ShopOnInstagram

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12" style="padding: 20px; display: flex; justify-content: center; align-items: center;">
                    <h1>Update Post Data</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <form method="post" enctype="multipart/form-data">

                                <div class="mb-3">
                                    <label asp-for="Url" class="form-label">Url</label>
                                    <input asp-for="Url" class="form-control">
                                    <span class="text-danger" asp-validation-for="Url"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Desc" class="form-label">Desc</label>
                                    <input asp-for="Desc" class="form-control">
                                    <span class="text-danger" asp-validation-for="Desc"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CreateAt" class="form-label">CreateAt</label>
                                    <input asp-for="CreateAt" class="form-control">
                                    <span class="text-danger" asp-validation-for="CreateAt"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label">ImageFile</label>
                                    <input asp-for="ImageFile" class="form-control img-upload-input">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>

                                <div class="img-box-big d-flex justify-content-center align-items-center">
                                    <img src="~/uploads/shop-on-instagram/@Model.Image" style="width:400px;height:400px;object-fit:cover;" />
                                </div>

                                <button type="submit" class="btn btn-outline-dark my-3">Submit</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationPartial")
}

