

@model List<ShopOnInstagram>
@{ 
    int s = 1;
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <h1>Instagram Posts</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped projects">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Url</th>
                                        <th scope="col">Desc</th>
                                        <th scope="col">Created At</th>
                                        <th scope="col">
                                            Image :
                                        </th>
                                        <th>
                                            Action :
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ShopOnInstagram item in Model)
                                    {
                                        <tr>
                                            <th scope="row" style=" vertical-align: middle;">@(s++)</th>
                                            <td>
                                                <a href="@item.Url" class="text-dark font-weight-normal">@item.Url</a>
                                            </td>
                                            <td style="width:24%">@item.Desc</td>
                                            <td>@item.CreateAt.ToString("dd:MM:yyyy")</td>
                                            <td>
                                                <div class="image-box">
                                                    <img src="~/uploads/shop-on-instagram/@item.Image" style="width:200px;height:200px;object-fit:contain;" />
                                                </div>
                                            </td>
                                            <td>
                                                <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-dark">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-dark btn-delete-sweet">
                                                    <i class="bi bi-x-lg"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
