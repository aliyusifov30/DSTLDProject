

@model List<BestSaleCategory>

@{ 
    int count = 1;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 d-flex">
                    <h1 class="align-items-center" style="width:100%;">Home Categories</h1>
                    @*<a asp-action="create" class="align-items-center" style="display: flex; justify-content: flex-end;color:black;">
                        <i class="bi bi-plus-circle-fill"></i>
                    </a>*@
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <table class="table table-striped projects">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">CreatedAt</th>
                                        <th scope="col">ModifiedAt</th>
                                        <th scope="col">
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BestSaleCategory item in Model)
                                    {
                                    <tr>
                                        <th scope="row" style=" vertical-align: middle;">@(count++)</th>
                                        <th scope="row" style=" vertical-align: middle;">@item.Title</th>
                                        <th scope="row" style=" vertical-align: middle;">
                                            @foreach (Category category in ViewBag.Category)
                                            {
                                                if (category.Id == item.CategoryId)
                                                {
                                                    @category.Name
                                                }
                                            }
                                        </th>
                                        <td>
                                            <div class="img-box">
                                                <img src="~/uploads/products/@item.Image" style="width:200px;height:200px;object-fit:cover;" />
                                            </div>
                                        </td>
                                        <td>@item.CreatedAt.ToString("dd:MM:yyyy HH:mm")</td>
                                        <td>@item.ModifiedAt.ToString("dd:MM:yyyy HH:mm")</td>
                                        <td>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-dark">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            @*<a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-info btn-delete-sweet">
                                                <i class="bi bi-x-lg text-danger"></i>
                                            </a>*@
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
}
